datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Quiz {
  id        Int        @id @default(autoincrement())
  title     String
  questions Question[]
  createdAt DateTime   @default(now())
}

model Question {
  id      Int     @id @default(autoincrement())
  quizId  Int
  quiz    Quiz    @relation(fields: [quizId], references: [id], onDelete: Cascade)

  type    String  
  text    String

  options String?
  answer  String? 

  createdAt DateTime @default(now())
}
